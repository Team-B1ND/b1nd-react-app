{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",  
    "moduleResolution": "bundler", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
  },
  "include": [
    "index.ts",
    "templates/index.ts",
    "helpers/types.ts",
    "helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "templates/**/ts",
    "templates/**/js"
  ],
}