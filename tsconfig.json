{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs", 
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./",
    },
    "include": [
      "index.ts",
      "templates/index.ts",
      "templates/types.ts",
      "helpers/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "templates/**/ts",
      "templates/**/js"
    ],
  }